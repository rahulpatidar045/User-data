{
    "title": "Person",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "First and Last name",
            "minLength": 4,
            "default": "Jeremy Dorn"
        },
        "age": {
            "type": "integer",
            "default": 25,
            "minimum": 18,
            "maximum": 99
        },
        "favorite_color": {
            "type": "string",
            "format": "color",
            "title": "favorite color",
            "default": "#ffa500"
        },
        "gender": {
            "type": "string",
            "enum": ["male", "female"]
        },
        "location": {
            "type": "object",
            "title": "Location",
            "properties": {
                "city": {
                    "type": "string",
                    "default": "San Francisco"
                },
                "state": {
                    "type": "string",
                    "default": "CA"
                },
                "citystate": {
                    "type": "string",
                    "description": "This is generated automatically from the previous two fields",
                    "template": "{{city}}, {{state}}",
                    "watch": {
                        "city": "location.city",
                        "state": "location.state"
                    }
                }
            }
        }
    }
}
